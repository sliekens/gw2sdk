{
  "name": "GW2SDK",
  "dockerFile": "Dockerfile",
  "build": {
    "cacheFrom": "ghcr.io/sliekens/gw2sdk/devcontainer"
  },
  "features": {
    "./dotnet": {
      "version": "7.0",
      "additionalVersions": [
        "6.0"
      ]
    },
    "./mono": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {}
  },
  "containerEnv": {
    "DOTNET_RUNNING_IN_CONTAINER": "true",
    "DOTNET_NOLOGO": "true",
    "DOTNET_USE_POLLING_FILE_WATCHER": "true",
    "DOTNET_CLI_TELEMETRY_OPTOUT": "true"
  },
  "initializeCommand": [
    ".devcontainer/initialize-host"
  ],
  "postCreateCommand": [
    ".devcontainer/post-create.sh"
  ],
  "mounts": [
    "type=volume,source=gw2sdk-packages,target=/home/vscode/.nuget/packages",
    "type=volume,source=gw2sdk-secrets,target=/home/vscode/.microsoft/usersecrets"
  ],
  "remoteUser": "vscode",
  "runArgs": [
    "--init"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "editorconfig.editorconfig",
        "github.vscode-github-actions"
      ]
    }
  }
}