<!--EXTERNAL_PROPERTIES: GITHUB_ACTIONS-->
<!--EXTERNAL_PROPERTIES: SYMBOL_PACKAGE-->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0;net461</TargetFrameworks>
    <AssemblyTitle>GW2 Client SDK</AssemblyTitle>
    <Product>GW2SDK</Product>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <!-- Member is obsolete -->
    <WarningsNotAsErrors>$(WarningsNotAsErrors);0618</WarningsNotAsErrors>
  </PropertyGroup>

  <!-- NuGet properties -->
  <PropertyGroup>
    <PackageId>GW2SDK</PackageId>
    <Authors>Steven Liekens &amp; Contributors</Authors>
    <Company>None</Company>
    <RepositoryUrl>https://github.com/sliekens/gw2sdk.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <ImplicitUsings>disable</ImplicitUsings>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(SYMBOL_PACKAGE)' == 'true'">
      <!-- Create a standalone snupkg with PDB files -->
      <PropertyGroup>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
      </PropertyGroup>
    </When>
    <Otherwise>
      <!-- Embed PDB files in the DLL, which is the only reliable solution because packages with standalone PDBs are not supported by SDK-style projects -->
      <PropertyGroup>
        <DebugType>embedded</DebugType>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
    <PackageReference Include="IsExternalInit" Version="1.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Nullable" Version="1.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.Text.Json" Version="6.0.5" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>

</Project>